<Window
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WPF_MailSender"
        xmlns:System="clr-namespace:System;assembly=mscorlib" x:Class="WPF_MailSender.MainWindow"
        xmlns:wpfTool="clr-namespace:Xceed.Wpf.Toolkit;assembly=Xceed.Wpf.Toolkit"
        xmlns:Linq2SQL="clr-namespace:WPF_MailSender.Data"
        mc:Ignorable="d"
        DataContext="{Binding Main, Source={StaticResource Locator}}"
        Title="{Binding Title}" Height="450" Width="800" ResizeMode="NoResize">
    <DockPanel >
        <Menu DockPanel.Dock="Top" BorderBrush="Aqua">
            <MenuItem Header="File"/>
            <MenuItem Header="Tools" BorderThickness="1" SnapsToDevicePixels="True"/>
            <MenuItem Header="Help"/>
        </Menu>
        <StatusBar DockPanel.Dock="Bottom">
            <ProgressBar x:Name="Progress"/>
        </StatusBar>
        <TabControl>
            <TabItem Header="Senders/Recepients">
                <Grid Height="350" Width="790" HorizontalAlignment="Right" VerticalAlignment="Bottom">
                    <Grid.Resources>
                        <Linq2SQL:MailSenderDBDataContext x:Key="DataContext"/>
                    </Grid.Resources>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="15*"/>
                        <ColumnDefinition Width="64*"/>
                        <ColumnDefinition Width="79*"/>
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="75*"/>
                        <RowDefinition Height="15*"/>
                    </Grid.RowDefinitions>
                    <Label Grid.Column="1" HorizontalAlignment="Center" VerticalAlignment="Top" Content="Sender Selection" FontSize="15" Height="30" Width="120" Margin="63,15,137,0" HorizontalContentAlignment="Center"/>
                    <Label Grid.Column="2" HorizontalAlignment="Center" VerticalAlignment="Top" Content="Recipient Selection" FontSize="15" Height="30" Width="135" Margin="137,15,123,0" HorizontalContentAlignment="Center"/>
                    <ListView SelectedIndex="0" SelectionMode="Single" Name="SendersBase" ScrollViewer.VerticalScrollBarVisibility="Visible" Grid.Column="0" Grid.Row="0" HorizontalAlignment="Left" VerticalAlignment="Top" Width="370" Height="100" Margin="20,50,0,0" Grid.ColumnSpan="2">
                        <ListView.View>
                            <GridView AllowsColumnReorder="True">
                                <GridViewColumn DisplayMemberBinding="{Binding Path=Name}" Width="75">Name</GridViewColumn>
                                <GridViewColumn DisplayMemberBinding="{Binding Path=Email}" Width="125">Email</GridViewColumn>
                                <GridViewColumn DisplayMemberBinding="{Binding Path=Server}" Width="100">SMTP</GridViewColumn>
                                <GridViewColumn DisplayMemberBinding="{Binding Path=Port}" Width="45">Port</GridViewColumn>
                            </GridView>
                        </ListView.View>
                    </ListView>
                    <ListView Name="SendersUser" ScrollViewer.VerticalScrollBarVisibility="Visible" SelectionMode="Multiple" Grid.Column="0" Grid.Row="0" HorizontalAlignment="Left" VerticalAlignment="Top" Width="370" Height="100" Margin="20,190,0,0" Grid.ColumnSpan="2">
                        <ListView.View>
                            <GridView>
                                <GridViewColumn DisplayMemberBinding="{Binding Path=Name}" Width="75">Name</GridViewColumn>
                                <GridViewColumn DisplayMemberBinding="{Binding Path=Email}" Width="125">Email</GridViewColumn>
                                <GridViewColumn DisplayMemberBinding="{Binding Path=Server}" Width="100">SMTP</GridViewColumn>
                                <GridViewColumn DisplayMemberBinding="{Binding Path=Port}" Width="45">Port</GridViewColumn>
                            </GridView>
                        </ListView.View>
                    </ListView>
                    <ListBox ItemsSource="{Binding RecepientsList}"  Name="RecepientsBase" Grid.Column="2" Grid.Row="0" Width="150" Height="240" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="20,50,0,0"></ListBox>
                    <ListBox Name="RecepientsUser" Grid.Column="2" Grid.Row="0" Width="150" Height="240" HorizontalAlignment="Right" VerticalAlignment="Top" Margin="0,50,10,0"></ListBox>

                    <Button Name="SendersRemove" Grid.Column="1" Grid.Row="0" Height="25" Width="40" HorizontalAlignment="Center" FontSize="14" Margin="33,161,247,106" VerticalAlignment="Center" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" Click="SendersRemove_Click" IsTabStop="False" SnapsToDevicePixels="True">
                        <Image Source="Img/remove.png" Height="18" Width="20" VerticalAlignment="Top"/>
                    </Button>
                    <Button Name="SendersAdd" Grid.Column="1" Grid.Row="0" Height="25" Width="40" HorizontalAlignment="Center" FontSize="14" Margin="173,161,107,106" VerticalAlignment="Center" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" Click="SendersAdd_Click">
                        <Image Source="Img/add.png" Height="19" Width="20" HorizontalAlignment="Right"/>
                    </Button>

                    <Button Name="RecipientRemove" Grid.Column="2" Grid.Row="0" Content="←" Height="25" Width="40" HorizontalAlignment="Center" FontSize="14" Margin="182,135,173,132" VerticalAlignment="Center" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" Click="RecipientRemove_Click"/>
                    <Button Name="RecipientAdd" Grid.Column="2" Grid.Row="0" Content="→" Height="25" Width="40" HorizontalAlignment="Center" FontSize="14" Margin="182,105,173,162" VerticalAlignment="Center" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" Click="RecipientAdd_Click"/>

                    <Button Name="NewSender" Grid.Column="0" Grid.Row="1" Height="30" Width="100" HorizontalAlignment="Left" Margin="20,14,0,14" Click="NewSender_Click" Grid.ColumnSpan="2">
                        <Image Source="Img/New.png"></Image>
                    </Button>
                    <Button Name="DeleteSender" Grid.Column="1" Grid.Row="1" Height="30" Width="100" HorizontalAlignment="Center" Margin="73,14,147,14" Click="DeleteSender_Click">
                        <Image Source="Img/delete.png"></Image>
                    </Button>
                    <Button Name="EditSender" Grid.Column="1" Grid.Row="1" Height="30" Width="100" HorizontalAlignment="Right" Margin="0,14,20,14" Click="EditSender_Click">
                        <Image Source="Img/Edit.png"></Image>
                    </Button>

                    <Button Name='NewRecepient' Grid.Column="2" Grid.Row="1" Height="30" Width="100" HorizontalAlignment="Left" Margin="20,14,0,14" Click="NewRecepient_Click">
                        <Image Source="Img/New.png"></Image>
                    </Button>
                    <Button Name="DeleteRecepient" Grid.Column="2" Grid.Row="1" Height="30" Width="100" HorizontalAlignment="Center" Margin="147,14,148,14" Click="DeleteRecepient_Click">
                        <Image Source="Img/delete.png"></Image>
                    </Button>
                    <Button Name ="EditRecepient" Grid.Column="2" Grid.Row="1" Height="30" Width="100" HorizontalAlignment="Right" Margin="0,14,20,14" Click="EditRecepient_Click">
                        <Image Source="Img/Edit.png"></Image>
                    </Button>
                </Grid>
            </TabItem>
            <TabItem Header="Message">
                <DockPanel Width="790" Height="350" LastChildFill="false">
                    <GroupBox DockPanel.Dock="Left" Width="200" Header="Message List">
                        <ListBox>
                            <ListBoxItem >Message_1</ListBoxItem>
                            <ListBoxItem >Message_1</ListBoxItem>
                            <ListBoxItem >Message_1</ListBoxItem>
                            <ListBoxItem >Message_1</ListBoxItem>
                        </ListBox>
                    </GroupBox>
                    <Grid DockPanel.Dock="Top">
                        <Label Content="Your Message" VerticalAlignment="Top" Width="135" Height="34" FontSize="16" HorizontalContentAlignment="Center" Background="#00000000"/>
                        <TextBox Name="MessageSubject" LostFocus="MessageSubject_LostFocus" HorizontalAlignment="Center" Height="23" TextWrapping="Wrap" VerticalAlignment="Top" Width="305" Margin="0,30,0,0"/>
                        <TextBox Name="WatermarkSubject" Text="Email Subject" Foreground="Gray" GotFocus="WatermarkSubject_GotFocus" HorizontalAlignment="Center" Height="23" TextWrapping="Wrap" VerticalAlignment="Top" Width="305" IsReadOnly="True" Margin="0,30,0,0"/>
                        
                        <TextBox Name="MessageBody" LostFocus="MessageBody_LostFocus" HorizontalAlignment="Center" Height="151" Margin="0,100,0,50" TextWrapping="Wrap" AcceptsReturn="True" VerticalAlignment="Top" Width="305"/>
                        <TextBox Name="WatermarkBody" Text="Email Text" Foreground="Gray" GotFocus="WatermarkBody_GotFocus" HorizontalAlignment="Center" Height="151" Margin="0,100,0,50" TextWrapping="Wrap" AcceptsReturn="True" VerticalAlignment="Top" Width="305"/>
                    </Grid>
                </DockPanel>
            </TabItem>
            <TabItem Header="Scheduler">
                <Grid Height="350" Width="790" HorizontalAlignment="Center" VerticalAlignment="Center">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="25*"></ColumnDefinition>
                        <ColumnDefinition Width="75*"></ColumnDefinition>
                    </Grid.ColumnDefinitions>
                    <StackPanel Grid.Column="0" HorizontalAlignment="Left" Margin="15,10" Height="Auto">
                        <Label Content="Date" HorizontalContentAlignment="Center"></Label>
                        <Calendar></Calendar>
                        <Label Content="Time" HorizontalContentAlignment="Center" Margin="0,0,0,15"></Label>
                        <wpfTool:TimePicker></wpfTool:TimePicker>
                        <Button Content="Send Now" HorizontalAlignment="Center" VerticalAlignment="Top" Margin="0,10" Width="120" Click="Button_Click"/>
                        <Button Content="Add Scheduler Task" HorizontalAlignment="Center" VerticalAlignment="Top" Margin="0,10" Width="120" Click="Button_Click"/>
                    </StackPanel>
                    <GroupBox Grid.Column="1" Margin="0,0,5,5" Header="Scheduler Tasks">
                        <ListBox Margin="0,10,0,0">
                            <ListBoxItem>Task_1</ListBoxItem>
                            <ListBoxItem>Task_2</ListBoxItem>
                            <ListBoxItem>Task_3</ListBoxItem>
                        </ListBox>
                    </GroupBox>
                    
                </Grid>
            </TabItem>
        </TabControl>
    </DockPanel>
</Window>
